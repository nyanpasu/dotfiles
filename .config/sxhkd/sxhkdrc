##
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

super + Tab
	bspc desktop -f last

# Toggle desktop type
super + ctrl + f
	bspc desktop --toggle floating

# Toggle window type
super + {s,f,p}
	bspc window --toggle {floating,fullscreen,pseudo_tiled}

# Close window
super + w
	bspc window -c

# Move windows
super + {h,j,k,l}
	bspc window -f {left,down,up,right}

# Swap window to dir
super + shift + {h,j,k,l}
	bspc window focused -s {left,down,up,right}

# Swap window to desktop
super + shift + {1-9}
	bspc window focused --to-desktop {1-9}

# Cycle windows
super + {c,shift + c}
	bspc desktop -C {forward,backward}

# Cycle layouts
super + {t,shift + t}
	bspc desktop -l {next,prev}

# Cycle desktops
super + {Right,Left}
	bspc desktop -f {next,prev}

# Swap desktops
super + shift + {Left,Right}
	bspc desktop -s {prev,next}

# Split: Choose
super + ctrl + {h,j,k,l,c}
	bspc window --presel {left,down,up,right,cancel}

# Split: Resize
super + ctrl + {1-9}
	bspc window -r 0.{1-9}

# Resize windows: Increase
super + alt + {h,j,k,l}
	bspc window focused --edge {left,down,up,right} +40

# Resize windows: Decrease
super + alt + shift + {h,j,k,l}
	bspc window focused --edge {left,down,up,right} -40

super + {1-9}
	bspc desktop --focus ^{1,2,3,4,5,6,7,8,9}

# Mouse binds
~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + alt + p
	bspc config focus_follows_pointer {true,false}
#

# Balance windows
super + b
	bspc desktop -B

###
# WM independent hotkeys
#

super + Return
	termite

super + space
	dmenu_run 

super + Escape
	pkill -USR1 -x sxhkd

:alt + bracket{left,right}
	amixer -q set Master 1%{-,+}

# vim: set ft=sxhkdrc:
