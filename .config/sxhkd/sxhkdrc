#
# bspwm hotkeys
#

##############
super + alt + Escape
    bspc quit

super + w
    bspc window -c

#button{4,5}
#bspc desktop -f {next,prev}

super + Tab
    bspc desktop -f last

super + {s,f,p}
    bspc window --toggle {floating,fullscreen,pseudo_tiled}

#super + {grave,Tab}
#    bspc {alternate,alternate_desktop}

super + {h,j,k,l}
    bspc window -f {left,down,up,right}

super + shift + {h,j,k,l}
    bspc window focused -s {left,down,up,right}

# Cycle windows
super + {c,shift + c}
    bspc desktop -C {forward,backward}

# Cycle layouts
super + {t,shift + t}
    bspc desktop -l {next,prev}

# Cycle desktops
super + {Right,Left}
    bspc desktop -f {next,prev}

# Swap desktops
super + shift + {Left,Right}
    bspc desktop -s {prev,next}

super + ctrl + {h,j,k,l,c}
    bspc window --presel {left,down,up,right,cancel}

super +alt + {h,j,k,l}
    bspc window focused --edge {left,down,up,right} +15

super + alt + shift + {l,k,j,h}
    bspc window focused --edge {left,down,up,right} -15

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {1-9}
    bspc desktop --focus ^{1,2,3,4,5,6,7,8,9}

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + shift + {h,j,k,l}
    bspc window focused --swap {left,down,up,right}

super + alt + control + {h,j,k,l} ; {0-9}
    bspc window -e {left,down,up,right} 0.{0-9}

super + alt + p
    bspc config focus_follows_pointer {true,false}

super + shift + {1-9}
    bspc window focused --to-desktop {1-9}

super + b
    bspc desktop -B

#
# wm independent hotkeys
#

super + Return
    termite

super + space
    dmenu_run 

super + Escape
    pkill -USR1 -x sxhkd

:alt + bracket{left,right}
    amixer -q set Master 1%{-,+}

# vim: set ft=sxhkdrc:
