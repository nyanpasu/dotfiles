#
# bspwm hotkeys
#

##############
super + alt + Escape
    bspc quit

super + w
    bspc window -c

super + t
    bspc cycle_layout

super + {s,f}
    bspc window --toggle {floating,fullscreen}

super + {grave,Tab}
    bspc {alternate,alternate_desktop}

super + {h,j,k,l}
    bspc focus {left,down,up,right}

super + shift + {h,j,k,l}
    bspc window focused -s {left,down,up,right}

super + {c,shift + c}
    bspc cycle {next,prev}

super + bracket{left,right}
    bspc cycle_desktop {prev,next}

super + ctrl + {h,j,k,l}
    bspc window --presel {left,down,up,right}

super + {h,j,k,l}
    bspc window --edge {left,down,up,right} +5

super + alt + shift + {h,j,k,l}
    bspc window focused --edge {left,down,up,right} -5

super + ctrl + {1-9}
    bspc ratio 0.{1-9}

super + {1-9}
    bspc desktop --focus ^{1,2,3,4,5,6,7,8,9}

super + alt + {h,j,k,l}
    bspc window -f {left,down,up,right}

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + shift + {h,j,k,l}
    bspc window focused --swap {left,down,up,right}

super + alt + control + {h,j,k,l} ; {0-9}
    bspc window -e {left,down,up,right} 0.{0-9}

super + alt + p
    bspc config focus_follows_pointer {true,false}

super + shift + {1-9}
    bspc window focused --to-desktop {1-9}

#super + button{1,2,3}
#    bspc grab_pointer {move,resize_side,resize_corner}
#
#super + !button{1,2,3}
#    bspc {track_pointer,track_pointer,track_pointer} %i %i
#
#super + @button{1,2,3}
#    bspc {ungrab_pointer,ungrab_pointer,ungrab_pointer}
#
#super + alt + button1
#    bspc grab_pointer focus

#
# wm independent hotkeys
#

super + Return
    termite

super + space
    dmenu_run 

super + Escape
    pkill -USR1 -x sxhkd

:alt + bracket{left,right}
    amixer -q set Master 1%{-,+}

# vim: set ft=sxhkdrc:
