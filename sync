    '.config/Clementine/clementine.db': '~/.config/Clementine/clementine.db',
    '.config/Thunar/accels.scm': '~/.config/Thunar/accels.scm',
    '.config/Thunar/uca.xml': '~/.config/Thunar/uca.xml',
